<section class="orders-show">
  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>
  <div class="order-summary jumbotron">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col"></th>
        <th scope="col">name</th>
        <th scope="col">description</th>
        <th scope="col">qt.</th>
        <th scope="col">price</th>
        <th scope="col">total</th>
      </tr>
    </thead>
    <tbody>
    <% @order.line_items.each do |line_item| %>
      <tr>
        <th scope="row"></th>
        <td><img style="width:128px;height:128px;" src="<%= line_item.product.image %>"></img></td>
        <td><%= line_item.product.name%></td>
        <td><%= line_item.product.description %></td>
        <td><%= line_item.quantity %></td>
        <td><%= humanized_money_with_symbol line_item.item_price %></td>
        <td><%= humanized_money_with_symbol line_item.total_price %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
    <h4>Order total: <%= @order.total %></h4>
    <h4>Thank you for your order <%= @order.email %>!</h4>
  </div>
  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>
</section>
